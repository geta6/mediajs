  .item-side
    position relative
    width 250px
    font-size 12px
    color $color_br_sneak

    .item-side-container
      padding-bottom 60px
      width 210px

    .item-stat
      display none
      opacity 0

    .item-user
      .item-user-icon
        display inline-block
        margin 5px 0
        width 25px
        height 25px
        background-color $color_dk_sneak
        background-size cover
        background-position 50% 50%
        border-radius 3px

    .item-play
      position fixed
      bottom 0
      width 210px

    table
      margin-bottom 21px

    // tr:last-child td
    //   border-bottom none

    .item-side-entry
      span
        width 50px
        overflow ellipsis
      .pull-right
        width 150px
        text-align right
        overflow ellipsis
      .item-stat-clickable
        cursor pointer
        &:hover
          color $color_br_hover

    th.item-side-entry
      padding 0 5px
      height 42px
      font-weight 500
      border-bottom 2px solid $color_br_light
      vertical-align bottom

    td.item-side-entry
      padding 0 5px
      height 35px
      line-height 35px
